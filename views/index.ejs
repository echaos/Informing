<body>
    <nav class="navbar navbar-default m_nav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Informing</a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Media <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Files</a></li>
                            <li><a href="#">Images</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>



                <form method="POST">
                <ul class="nav navbar-nav navbar-right">
                    <% if (!login || login === "false") { %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Hello <%= username %><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><button class="btn btn-link" type="submit" name="setting" value="true">Setting</button>
                                <li><button class="btn btn-link" type="submit" name="logout" value="true">Logout</button></li>
                            </ul>
                        </li>
                    <% } else { %>
                            <li><a href="/login">Login</a></li>
                    <% }%>
                </ul>
                </form>
                <form class="navbar-form navbar-right" action="/new">
                    <button type="submit" class="btn btn-default">New</button>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="slide_container container">
        <div class="slices">
            <div class="slice" id="fade1">
                <img src="/images/lake-irene-1679708_1920-e1520033192433.jpg" class="slice_image"/>
                <p class="slice_text">Favere grauiter ducunt ad castus tumultumque.1</p>
            </div>
            <div class="slice fading" id="fade2">
                <img src="/images/landscape-photography-02.jpg" class="slice_image"/>
                <p class="slice_text">Favere grauiter ducunt ad castus tumultumque.2</p>
            </div>
            <div class="slice fading" id="fade3">
                <img src="/images/photo-1532274402911-5a369e4c4bb5.jpg" class="slice_image"/>
                <p class="slice_text">Favere grauiter ducunt ad castus tumultumque.3</p>
            </div>
        </div>
        <a class="prev_button" onclick="nextSlice(-1)">&#10094;</a>
        <a class="next_button" onclick="nextSlice(1)">&#10095;</a>
    </div>


    <div class="content_container">
    <div class="well well-lg well_container ">
        <div class="notification_buttons">
            <button class="btn btn-primary" type="button">All messages <span class="badge">0</span></button>
            <button class="btn btn-danger" type="button">Deadlines <span class="badge">0</span></button>
            <button class="btn btn-warning" type="button">Events <span class="badge">0</span></button>
        </div>
        <div class="input-group m_input">
            <span class="input-group-addon">Search:</span>
            <input type="text" class="form-control" placeholder="Keyword">
        </div>
        <div class="list-group list">
            <button type="button" class="list-group-item">Placeholder 1</button>
