<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title id="site_title"><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css"/>
    <link rel="stylesheet" href="/stylesheets/index.css"/>
    <script type="text/javascript" src="/javascripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.js"></script>
    <script type="text/javascript">
        function checkTextField(form) {
            let username = form.username.value;
            let password = form.password.value;
            let site_name = form.site_name.value;
            if (username === "" || password === "" || site_name === "") {
                alert("The box cannot be blank")
                window.location.reload();
                return false
            }
            return true;
        }
    </script>
</head>

<body>
<nav class="navbar navbar-default m_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Informing</a>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Media <span
                                class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Files</a></li>
                        <li><a href="#">Images</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</nav>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well well-lg well_container_3">
            <form method="POST" onsubmit="checkTextField(this)">
                <p>Account settings</p>

                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>

                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
                <br>
                <!--<div class="input-group">-->
                <!--<button type="submit" class="btn btn-default">Confirm</button>-->
                <!--</div>-->

                <hr>
                <p>Site settings</p>
                <label for="site_name">Site name</label>
                <input type="text" class="form-control" id="site_name" name="site_name" required>

                <br>
                <div class="input-group">
                    <button type="submit" class="btn btn-default">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>